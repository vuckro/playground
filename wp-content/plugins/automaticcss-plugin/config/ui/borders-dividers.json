	"content": [
		{
			"id": "border-styles",
			"title": "Borders",
			"type": "accordion-container",
			"tooltip": "",
			"description": "",
			"content": [
				{
					"id": "base-radius",
					"title": "Border Radius",
					"type": "text",
					"default": "5px",
					"cssVariable": "--radius",
					"tooltip": "The default radius value for your website.",
					"documentation": "https://automaticcss.com/docs/global-border-system/"
				},
				{
					"id": "border-size",
					"title": "Border Width",
					"type": "text",
					"default": "1px",
					"cssVariable": "--border-width",
					"skip-if-empty": true
				},
				{
					"id": "border-style",
					"title": "Border Style",
					"type": "text",
					"default": "solid",
					"cssVariable": "--border-style",
					"skip-if-empty": true
				},
				{
					"id": "border-color-dark",
					"title": "Border Color (Dark)",
					"type": "text",
					"default": "var(--black-trans-20)",
					"cssVariable": "--border-color-dark",
					"skip-if-empty": true
				},
				{
					"id": "border-color-light",
					"title": "Border Color (Light)",
					"type": "text",
					"default": "var(--white-trans-20)",
					"cssVariable": "--border-color-light",
					"skip-if-empty": true
				},
				{
					"id": "border-main",
					"title": "Primary Border Style",
					"type": "textarea",
					"cssVariable": "--border",
					"default": "var(--border-size) var(--border-style) var(--border-color-dark)",
					"skip-if-empty": true,
					"tooltip": "The primary border style for your website. Maps to var(--border).",
					"documentation": "https://automaticcss.com/docs/global-border-system/"
				}
			]
		},
		{
			"id": "radius-options",
			"title": "Additional Radius Options",
			"type": "accordion-container",
			"tooltip": "",
			"description": "",
			"content": [
				{
					"id": "radius-scale",
					"title": "Radius Scale",
					"type": "number",
					"default": "1.5",
					"musicScale": true,
					"displayWhen": ["option-radius-sizes", "on"]
				},
				{
					"id": "auto-radius-selectors",
					"title": "Auto Radius Selectors",
					"type": "textarea",
					"default": "\":where(img):not(header img)\", \":where(figure:not(figure:has(img)))\"",
					"tooltip": "Comma separated list of quoted selectors.",
					"skip-if-empty": true,
					"displayWhen": ["option-auto-radius", "on"]
				},
				{
					"id": "option-auto-radius",
					"title": "Add Radius Automatically",
					"type": "toggle",
					"default": "on",
					"cssClasses": ["acss-auto-radius"],
					"target": "body",
					"tooltip": "Automatically add global border radius programmatically.",
					"documentation": "https://automaticcss.com/docs/global-border-system/"
				},
				{
					"id": "option-inverted-radius-framework",
					"title": "Inverted Radius Support",
					"type": "toggle",
					"tooltip": "Activate utilities and framework for inverted radius.",
					"default": "off",
					"documentation": "https://automaticcss.com/docs/inverted-radius-framework/"
				},
				{
					"id": "option-radius-sizes",
					"title": "Generate Extra Radius Sizes",
					"type": "toggle",
					"tooltip": "Generate XS to XXL sizes.",
					"default": "on"
				}
			]
		},
		{
			"id": "divider-styles",
			"title": "Dividers",
			"type": "accordion-container",
			"tooltip": "",
			"description": "",

			"content": [
				{
					"id": "divider-size",
					"title": "Divider Size",
					"type": "text",
					"default": "1px",
					"skip-if-empty": true
				},
				{
					"id": "divider-style",
					"title": "Divider Style",
					"type": "text",
					"default": "solid",
					"skip-if-empty": true
				},
				{
					"id": "divider-gap",
					"title": "Divider Gap",
					"type": "text",
					"default": "var(--content-gap)",
					"skip-if-empty": true
				},
				{
					"id": "divider-color-dark",
					"title": "Divider Color (Dark)",
					"type": "text",
					"default": "var(--black-trans-20)",
					"skip-if-empty": true
				},
				{
					"id": "divider-color-light",
					"title": "Divider Color (Light)",
					"type": "text",
					"default": "var(--white-trans-20)",
					"skip-if-empty": true
				},
				{
					"id": "divider-main",
					"title": "Primary Divider Style",
					"type": "textarea",
					"default": "var(--divider-size) var(--divider-style) var(--divider-color-dark)",
					"skip-if-empty": true,
					"cssVariable": "--divider",
					"tooltip": "The primary divider style for your website. Maps to var(--divider)",
					"documentation": "https://automaticcss.com/docs/global-divider-system/"
				}
			]
		}
	]
}
