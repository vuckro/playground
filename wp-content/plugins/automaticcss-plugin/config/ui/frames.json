{
	"$schema": "screen.schema.json",
	"id": "frames",
	"title": "Frames",
	"type": "screen-container",
	"iconPaths": ["M16.75 4.5C17.0594 4.5 17.3125 4.725 17.3125 5V7H2.6875V5C2.6875 4.725 2.94062 4.5 3.25 4.5H16.75ZM2.6875 15V8.5H6.0625V15.5H3.25C2.94062 15.5 2.6875 15.275 2.6875 15ZM7.75 15.5V8.5H17.3125V15C17.3125 15.275 17.0594 15.5 16.75 15.5H7.75ZM3.25 3C2.00898 3 1 3.89688 1 5V15C1 16.1031 2.00898 17 3.25 17H16.75C17.991 17 19 16.1031 19 15V5C19 3.89688 17.991 3 16.75 3H3.25Z"],
	"content": [
		{
			"id": "option-frames",
			"title": "Load Frames Styling",
			"type": "toggle",
			"default": "off",
			"style": "primary"
		},
		{
			"id": "frames-content-styles",
			"title": "Content Styles",
			"type": "accordion-container",
			"displayWhen": [
				"option-frames",
				"on"
			],
			"content": [
				{
					"id": "fr-hero-padding",
					"title": "Hero Padding",
					"type": "text",
					"default": "var(--section-space-xl)"
				},
				{
					"id": "fr-lede-width",
					"title": "Lede Width",
					"type": "number",
					"default": "60",
					"unit": "ch",
					"appendunit": "ch",
					"skip-unit-conversion": true
				},
				{
					"id": "fr-card-avatar-radius",
					"title": "Avatar Radius",
					"type": "text",
					"default": "50vw"
				}
			]
		},
		{
			"id": "frames-card-styles",
			"title": "Card Styles",
			"type": "accordion-container",
			"displayWhen": [
				"option-frames",
				"on"
			],
			"content": [
				{
					"id": "fr-card-padding",
					"title": "Padding",
					"type": "text",
					"default": "var(--space-m)"
				},
				{
					"id": "fr-card-gap",
					"title": "Content Gap",
					"type": "text",
					"default": "var(--space-s)"
				},
				{
					"id": "fr-card-border-size",
					"title": "Border Width",
					"type": "text",
					"default": "0.15rem"
				},
				{
					"id": "fr-card-border-color",
					"title": "Border Color",
					"type": "text",
					"default": "var(--neutral-light)"
				},
				{
					"id": "fr-card-border-style",
					"title": "Border Style",
					"type": "text",
					"default": "solid"
				},
				{
					"id": "fr-card-radius",
					"title": "Border Radius",
					"type": "text",
					"default": "var(--radius)"
				}
			]
		},
		{
			"id": "frames-components",
			"title": "Components",
			"type": "accordion-container",
			"content": []
		},
		{
			"id": "frames-options",
			"title": "Additional Options",
			"type": "accordion-container",
			"content": [
				{
					"id": "option-bricks-template-gallery-enhancements",
					"title": "Bricks Template Gallery Enhancements",
					"type": "toggle",
					"default": "on",
					"style": ""
				}
			]
		}
	]
}
